<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="colorControlNormal">@color/pale_grey</item>
        <item name="colorControlActivated">@color/dark_grey</item>
        <item name="colorControlHighlight">@color/dark_grey</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/light_background</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppBar">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="AppBar.Lift">
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/light_background</item>
        <item name="android:theme">?actionBarTheme</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/TextBold.DarkBlue.20</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/dark_grey</item>
    </style>

    <style name="Toolbar.Collapse">
        <item name="layout_collapseMode">pin</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="expandedTitleTextAppearance">@style/TextBold.DarkBlue.32</item>
        <item name="collapsedTitleTextAppearance">@style/TextBold.DarkBlue.20</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/d2</item>
        <item name="boxCornerRadiusTopEnd">@dimen/d2</item>
        <item name="materialThemeOverlay">@style/TextInputEditTextOverlay</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/input_hint_color</item>
        <item name="boxStrokeColor">@drawable/text_input_box</item>
    </style>

    <style name="TextInputEditTextOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/TextInputEditText</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextRegular.DarkBlue.16</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="CurrencyEditText">
        <item name="android:textAppearance">@style/TextBold.Green.35</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="ProgressWheel">
        <item name="matProg_barColor">@color/green</item>
        <item name="matProg_barWidth">2dp</item>
        <item name="matProg_progressIndeterminate">true</item>
    </style>

    <style name="ProgressWheel.MaxHeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProgressWheel.Large">
        <item name="android:layout_width">@dimen/d10</item>
        <item name="matProg_barWidth">3dp</item>
        <item name="android:layout_height">@dimen/d10</item>
    </style>

</resources>
