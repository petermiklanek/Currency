<resources>
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/dark_grey</item>
        <item name="colorControlNormal">@color/pale_grey</item>
        <item name="colorControlActivated">@color/dark_grey</item>
        <item name="colorControlHighlight">@color/dark_grey</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="toolbarNavigationButtonStyle">@style/Toolbar.Button.Navigation.Tinted</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" />

    <style name="AppBar">
        <item name="android:background">@color/light_background</item>
    </style>

    <style name="AppBar.Lift">
        <item name="liftOnScroll">true</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">@color/light_background</item>
        <item name="android:theme">?actionBarTheme</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextAppearance">@style/TextBold.DarkBlue.20</item>
    </style>

    <style name="Toolbar.Button.Navigation.Tinted" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/dark_grey</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/d2</item>
        <item name="boxCornerRadiusTopEnd">@dimen/d2</item>
        <item name="materialThemeOverlay">@style/TextInputEditTextOverlay</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorTextColor">@color/red</item>
        <item name="hintTextColor">@color/input_hint_color</item>
        <item name="boxStrokeColor">@drawable/text_input_box</item>
    </style>

    <style name="TextInputEditTextOverlay" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="editTextStyle">@style/TextInputEditText</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textAppearance">@style/TextRegular.DarkBlue.16</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

</resources>
